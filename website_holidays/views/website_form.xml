<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="menu_hr_holidays_form_website" model="website.menu">
        <field name="name">Crear ausencia</field>
        <field name="url">holidays_webform</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence">56</field>
    </record>

    <template id="create_holidays" name="Create holidays">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">
                        <form role="form" action="/create/webholidays" method="POST">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"></input>
                            <div class="form-group">
                                <label for="holiday_status_id" class="control-label">Tipo de ausencia</label>
                                <select class="form-control link-style" name="holiday_status_id">
                                    <t t-foreach="leave_type_rec" t-as="leave">
                                        <option t-esc="leave.name" t-att-value="leave.id"/>
                                    </t>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="name" class="control-label">Desde</label>
                                <input type="text" name="request_date_from" t-att-value="request_date_from" id="request_date_from" class="form-control"></input>
                            </div>
                            <div class="form-group">
                                <label for="name" class="control-label">Hasta</label>
                                <input type="text" name="request_date_to" t-att-value="request_date_to" id="request_date_to" class="form-control"></input>
                            </div>
                            <div class="form-group">
                                <label for="name" class="control-label">Descripci√≥n</label>
                                <input type="text" name="name" t-att-value="name" id="name" class="form-control" placeholder="EJ: description..." style="text-transform: uppercase;"></input>
                            </div>
                            <div class="clearfix oe_login_buttons">
                                <button type="submit" class="btn btn-primary pull-left">ENVIAR</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <record id="holidays_thanks" model="website.page">
        <field name="name">Thanks</field>
        <field name="type">qweb</field>
        <field name="url">holidays_thanks</field>
        <field name="website_published">True</field>
        <field name="key">website_holidays.holidays_thanks</field>
        <field name="arch" type="xml">
            <t name="thanks" t-name="website_holidays.holidays_thanks">
                <t t-call="website.layout">
                    <div id="wrap">
                        <div class="container">
                            <h1>Thanks!</h1>
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="alert alert-success" role="status">
                                        Successfully created record
                                    </div>
                                    <p>
                                        Thank you for using our web portal!
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </field>
    </record>

</odoo>
