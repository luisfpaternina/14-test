<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <report id='report_etiqueta_senalizacion_promo'
            string='Etiqueta señalizacion promo'
            model='product.template'
            report_type='qweb-pdf'
            name='norauto_etiquetas_precios.report_product_etiqueta_promo'
            file='norauto_etiquetas_precios.report_product_etiqueta_promo'
            paperformat="norauto_etiquetas_precios.paperformat_etiqueta_señalizacion"
    />

    <template id='report_etiqueta_senalizacion_promotion'>
        <div style="padding-top: 10px; width: 70mm; height: 40mm; text-align: center; margin-right: 31px; display: inline-table;">
            <table class="table mb-0" style="height: 30mm; width: 70mm;">
                <tr>
                    <th class="text-center" style="border-top: 0; vertical-align: middle; padding: 0px; padding-left: 20px; height: 10mm;">
                        <strong style="font-weight: bold; font-size: 14px; margin-top: 0px;" t-field="product.name"/>
                    </th>
                </tr>
                <tr>
                    <td style="position: relative; border-top: 0; padding-top: 0px; padding-bottom: 0px; height: 10mm;">
                        <t t-set='precio_anterior_con_impuestos' t-value="product.precio_anterior + product.acumulado_impuestos"/>
                        <p style="position: absolute; font-size: 28px; left: 40px; top: 0px; font-weight: bold;">$ <span t-esc="'%.2f'%product.precio_con_impuestos"/></p>
                        <p style="position: absolute; font-size: 15px; left: 160px; top: 10px;">$ <del><span t-esc="'%.2f'% precio_anterior_con_impuestos"/></del></p>
                    </td>
                </tr>
                <tr>
                    <td style="border-top: 0; position: relative; padding: 0px; height: 10mm;" class="text-center align-middle">
                        <p style="position: absolute; font-weight: bold; font-size:8px; left: 20px; top: 5px;"><span t-esc="'%.2f'% product.precio_uni_med"/></p>
                        <p style="position: absolute; font-weight: bold; font-size:8px; left: 20px; top: 17px;"><span>$/<t t-esc='product.unimes'/></span></p>
                        <span><img alt="Barcode" style="width:75%; position: absolute; left: 41px; top: 5px;" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', quote_plus(product.barcode or ''), 470, 50)"/></span>
                        <!--                        <img alt="Barcode" t-elif="len(product.barcode) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', quote_plus(product.barcode or ''), 600, 150)" style="width:100%;height::4rem;"/>-->
                        <!--                        <img alt="Barcode" t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(product.barcode or ''), 600, 150)" style="width:100%;height::4rem;"/>-->
                        <p style="position: absolute; right: 3px; top: 5px; font-size:10px;"><t t-esc='product.default_code'/></p>
                        <t t-if="product.formated_date">
                            <p style="position: absolute; right: 3px; top: 26px; font-size:12px;"><t t-esc='product.formated_date'/></p>
                        </t>
                        <t t-foreach="product.gondola_ids" t-as="gondola">
                            <p style="position: absolute; font-size:12px; left: 20px; top: 26px;"><t t-esc='gondola.code'/></p>
                        </t>
                    </td>
                </tr>
            </table>
        </div>
    </template>

    <template id="report_product_etiqueta_promo">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-foreach="docs" t-as="product">
                    <t t-call="norauto_etiquetas_precios.report_etiqueta_senalizacion_promotion">
                        <t t-set="product" t-value="product"/>
                    </t>
                </t>
            </div>
        </t>
    </template>


</odoo>
