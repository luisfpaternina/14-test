<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paperformat_etiqueta_precio" model="report.paperformat">
        <field name="name">Etiqueta precio Landscape</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">7</field>
        <field name="margin_bottom">7</field>
        <field name="margin_bottom">7</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">3</field>
        <field name="dpi">90</field>
    </record>

    <report id='report_etiqueta_simple'
            string='Etiqueta simple (A4)'
            model='product.template'
            report_type='qweb-pdf'
            name='norauto_etiquetas_precios.report_etiqueta_simple_template'
            file='norauto_etiquetas_precios.report_etiqueta_simple_template_landscape'
            paperformat="norauto_etiquetas_precios.paperformat_etiqueta_precio"
    />

    <template id='report_etiqueta_simple_template'>
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <div class="page" style="text-align: center;">
                    <t t-foreach="docs" t-as="product">
                        <br/>
                        <br/>
                        <span style='font-weight: bold; font-size: 85px; top: 200px;'><t t-esc='product.name'/></span>
                        <br/>
                        <span style='font-weight: bold; font-size: 190px; margin-top: 50px;'>$ <t t-esc="'%.2f'% product.precio_con_impuestos"/></span>
                        <br/>
                        <span style="position: relative; font-size: 35px; font-weight: bold; left: -300px;"><span t-esc='product.precio_uni_med'/></span>
                        <span style="position: relative; font-size: 35px; font-weight: bold; left: -280px;"><span>$ / <t t-esc='product.unimes'/></span></span>
                        <span style='position: relative; font-weight: bold; left: 450px;'><t t-esc="product.idart"/></span>
                        <p style="page-break-after:always;"/>
                    </t>
                </div>
            </t>
        </t>
    </template>


</odoo>
