<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <report id='report_etiqueta_senalizacion_promo_a6'
            string='Etiqueta señalizacion promo A6'
            model='product.template'
            report_type='qweb-pdf'
            name='norauto_etiquetas_precios.report_product_etiqueta_promo_a6'
            file='norauto_etiquetas_precios.report_product_etiqueta_promo_a6'
            paperformat="norauto_etiquetas_precios.paperformat_etiqueta_señalizacion"
    />

    <template id='report_etiqueta_senalizacion_promotion_a6'>
        <div style="width: 104mm; margin-top: 80px; text-align: center; margin-right: 49px; display: inline-table;">
            <table class="mb-0" style="height: 148mm; width: 105mm;">
                <tr>
                    <th class="text-center" style="height: 90px; padding-left: 25px;">
                        <strong style="font-weight: bold; font-size: 25px; margin-top: 0px;" t-field="product.name"/>
                    </th>
                </tr>
                <tr>
                    <td style="vertical-align: bottom; height: 200px;">
                        <t t-set='precio_anterior_con_impuestos' t-value="product.precio_anterior + product.acumulado_impuestos"/>
                        <p style="font-weight: bold; font-size: 64px; margin-top: 0px;">$ <t t-esc="'%.2f'% product.precio_con_impuestos"/></p>
                        <p style="margin-bottom: 0px; font-size: 24px;">$ <del><t t-esc="'%.2f'% precio_anterior_con_impuestos"/></del></p>
                    </td>
                </tr>
                <tr>
                    <td style="position: relative;" class="text-center">
                        <p style="position: absolute; font-weight: bold; left: 21px; top: 75px; font-size:12px;    "><span t-esc='product.precio_uni_med'/></p>
                        <p style="position: absolute; font-weight: bold; left: 21px; top: 100px; font-size:10px;"><span>$ / <t t-esc='product.unimes'/></span></p>
                        <span><img alt="Barcode" style="width:75%; position: absolute; left: 51px; top: 75px;" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', quote_plus(product.barcode or ''), 600, 150)"/></span>
                        <!--                        <img alt="Barcode" t-elif="len(product.barcode) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', quote_plus(product.barcode or ''), 600, 150)" style="width:100%;height::4rem;"/>-->
                        <!--                        <img alt="Barcode" t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(product.barcode or ''), 600, 150)" style="width:100%;height::4rem;"/>-->
                        <p style="position: absolute; right: 10px; top: 85px; font-size:12px;"><t t-esc='product.default_code'/></p>
                        <t t-if="product.formated_date">
                            <p style="position: absolute; right: 10px; top: 160px; font-size:12px;"><t t-esc='product.formated_date'/></p>
                        </t>
                        <t t-foreach="product.gondola_ids" t-as="gondola">
                            <p style="position: absolute; left: 21px; top: 160px;"><t t-esc='gondola.code'/></p>
                        </t>
                    </td>
                </tr>
            </table>
        </div>
    </template>

    <template id="report_product_etiqueta_promo_a6">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-foreach="docs" t-as="product">
                    <t t-call="norauto_etiquetas_precios.report_etiqueta_senalizacion_promotion_a6">
                        <t t-set="product" t-value="product"/>
                    </t>
                </t>
            </div>
        </t>
    </template>


</odoo>
