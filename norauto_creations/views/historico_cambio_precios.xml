<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="tabla_historico_cambio_precios" model="ir.ui.view">
            <field name="name">product.template.historico_cambio_precios</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">

                
                <xpath expr="//page[@name='invoicing']" position="after">

                    <page name="cambios_precios" string="Cambios de precio">
                        <tree string='Historico de cambio de precios de venta'>
                            <separator string="Historico de cambios de precio de venta" colspan="2"/>
                            <field name='precios_venta_ids' widget="one2many_list"/>
                        </tree>
                    </page>
                    
                </xpath>   

            </field>
        </record>


    </data>
</odoo>
