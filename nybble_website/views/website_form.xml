<?xml version="1.0" encoding="UTF-8"?>
<odoo>
     <data>
        <record id="view_web_helpdesk_ticket_form_inherit" model="ir.ui.view">
            <field name="name">helpdesk.ticket.website.inherit</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="website_helpdesk_form.ticket_submit_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[5]" position="after">
                    <div class="form-group col-12 s_website_form_field s_website_form_model_required" data-type="ticket_type_id" data-name="Field">
                        <div class="row s_col_no_resize s_col_no_bgcolor">
                            <label class="col-form-label col-auto s_website_form_label" style="width: 200px" for="helpdesk2">
                                <span class="s_website_form_label_content">Tipo de ticket</span>
                                <span class="s_website_form_mark"> *</span>
                            </label>
                            <div class="col-sm col-xs-12">
                                <input id="helpdesk2" class="form-control s_website_form_input" name="ticket_type_id" required="1"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>     