<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>
        <report
                id="report_print_qr"
                string="Print QR labels"
                model="project.task"
                report_type="qweb-pdf"
                name="sat_companies_industry.report_print_qr"
        />

        <template id="report_print_qr">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">                    
                    <div class="header">
                       <h3>Print QR labels</h3>
                       <strong><span>OT:</span></strong><span> </span><span t-field="o.name"></span><br></br>
                       <strong><span>Aparato:</span></strong><span> </span><span t-field="o.product_id"></span>
                    </div>
                    <div class="article o_report_layout_standard">
                       <div class="page">
                            <t t-if="o.qr_pit_image">
                                <p align="center">Foso</p>
                                <img t-att-src="'data:image/png;base64,%s' % to_text(o.qr_pit_image)" width="200" height="200"/>
                            </t>
                            <t t-if="o.qr_cabine_image">
                                <p align="center">Cabina</p>
                                <img t-att-src="'data:image/png;base64,%s' % to_text(o.qr_cabine_image)" width="200" height="200"/>
                            </t>
                            <t t-if="o.qr_machine_image">
                                <p align="center">MÃ¡quina</p>
                                <img t-att-src="'data:image/png;base64,%s' % to_text(o.qr_machine_image)" width="200" height="200"/>
                            </t>
                       </div>
                    </div>
                    <div class="footer">
                        <div class="row">
                            <div class="col-xs-2 pull-left">
                                <small>
                                    <span>Page</span>
                                    <span class="page" />
                                        of
                                    <span class="topage" />
                                </small>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
  </data>
</odoo>
